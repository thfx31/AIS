!--- Configuration de base
!--- Remplacer l'heure par la date du jour au format hh:mm:ss month day year

clock set 13:40:30 May 25 2023
conf t
hostname SW01
ip domain name thfx.org

!--- VLAN
!--- Déclaration des VLAN
vlan 10
name administratif
vlan 20
name serveur
vlan 30
name formation
vlan 99
name natif
vlan 100
name management
vlan 666
name parking


!--- VLAN
!--- Désactivation VLAN 1
interface vlan1
no ip address
shutdown

!--- Interfaces
!--- Configuration interface de management
interface vlan 100
ip address 192.168.100.10 255.255.255.0
exit
ip default-gateway 192.168.100.254

!--- Interfaces
!--- Configuration interfaces Fa1/0/1 à Fa1/0/46
interface range fa1/0/1-46
switchport mode access
switchport access vlan 666
switchport nonegotiate
no cdp enable
shutdown

!--- Interfaces
!--- Configuration interfaces Gi1/0/1 à G11/0/4
interface range g1/0/1-4
switchport mode access
switchport access vlan 666
switchport nonegotiate
no cdp enable
shutdown

!--- Interfaces
!--- Configuration interface Fa1/0/47
interface fa1/0/47
description link to hyperV
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk native vlan 99
switchport trunk allowed vlan none
switchport trunk allowed vlan 10,20,30,99,100
switchport nonegotiate
no cdp enable

!--- Interfaces
!--- Configuration interface Fa1/0/48
interface fa1/0/48
description link to R1
switchport trunk encapsulation dot1q
switchport mode trunk
switchport trunk native vlan 99
switchport trunk allowed vlan none
switchport trunk allowed vlan 10,20,30,99,100
switchport nonegotiate
no cdp enable

!--- Hardening du switch
!--- Sécurisation de l'accès à la console
service password-encryption
line console 0
password *CONS!passwd
login
logging synchronous
exec-timeout 15
exit

!--- Hardening du switch
!--- Sécurisation de l'accès privilégié EXEC
enable secret *EXEC!passwd

!--- Hardening du switch
!--- Création utilisateur privilege 15
!--- Configuration SSH
!--- Désactivation telnet
!--- Vérification status SSH
username th.fx privilege 15 secret 556p13HY.9*
crypto key generate rsa general-keys modulus 2048
line vty 0 15
login local
transport input ssh
exec-timeout 15
exit
ip ssh version 2

!--- Hardening du switch
!--- Désactivation services inutiles
no ip http server
no ip http secure-server
no cdp run
no service dhcp
no ip domain-lookup

!--- Fin de la configuration
exit
wr mem
sh running





